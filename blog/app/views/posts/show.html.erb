<p id="notice"><%= notice %></p>
<h2 style="color: red;">Post <%= @post.id %>:</h3>
<p>
  <b>Name:</b>
  <%= @post.name %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>
<br/>
<h2 style="color: orange;">Comments:</h3>
<%= render @post.comments %>
<br/>
<h2 style="color: green;">Add a comment:</h2>
<%= render "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
